@{
    Layout = "~/Areas/Ads/Views/Shared/_AdsLayout.cshtml";
}

@*Page Header Start*@
<div class="page-header" style="background: url(../../Classifieds/dist/img/banner1.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-wrapper">
                    <h2 class="page-title">@AdsMaster.AdsResources.Resource.Deposit</h2>
                </div>
            </div>
        </div>
    </div>
</div>
@*Page Header End*@

@*Start Content Section*@
<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12">
                <div class="inner-box">
                    <h2 class="title-2">@AdsMaster.AdsResources.Resource.Deposit</h2>
                    <div class="dashboard-wrapper">
                        <div class="form-group mb-3">
                            <label class="control-label">Amount topup</label>
                            <input class="form-control input-md" name="price" placeholder="Set amount topup" type="number">
                            <div class="tg-checkbox mt-3">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="tg-priceoncall">
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-common" type="submit">Pay</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@*End Content Section*@
