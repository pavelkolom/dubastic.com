@using PopForums.Configuration
@inject ISettingsManager SettingsManager
@{
    ViewBag.Title = PopForums.Resources.VerificationFailure;
    Layout = "~/Areas/Ads/Views/Shared/_AdsLayout.cshtml";
}


<!-- Page Header Start -->
<div class="page-header" style="@("background: url(" + Url.Content("~/Classifieds/dist/img/banner1.jpg") + ");")">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="breadcrumb-wrapper">
                    <h2 class="page-title">@PopForums.Resources.VerificationFailure</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->


<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div>
                    @*<h1>@PopForums.Resources.VerificationFailure</h1>*@
                    @if (!SettingsManager.Current.IsPrivateForumInstance)
                    {
                        <ul id="TopBreadcrumb" class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="@HomeController.Name" asp-action="Index">@PopForums.Resources.Forums</a></li>
                        </ul>
                    }
                </div>

                <p>@PopForums.Resources.VerificationLinkBad <a asp-action="Verify" asp-route-id="">@PopForums.Resources.NeedToVerifyExistingAccount</a></p>
            </div>
        </div>
    </div>
</section>