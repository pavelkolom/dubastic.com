@{
	Layout = "~/Areas/Ads/Views/Shared/_AdsLayout.cshtml";
}

<!-- Page Header Start -->
<div class="page-header" style="background: url(../../Classifieds/dist/img/banner1.jpg);">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="breadcrumb-wrapper">
					<h2 class="page-title">Account Home</h2>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Page Header End -->
<!-- Start Content -->
<div id="content">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-12 col-lg-4 page-sidebar">
				<aside>
					<div class="sidebar-box">
						<div class="user">
							<div class="usercontent">
								<h3>Michael Dam</h3>
								<h4>Administrator</h4>
							</div>
							<figure>
								<a href="#"><img class="-img-fluid" src="~/Classifieds/dist/img/author/img1.jpg" alt=""></a>
							</figure>
						</div>
						<nav class="navdashboard">
							<ul>
								<li>
									<a class="active" href="@Url.Action("Index", "Account")">
										<i class="fas fa-home"></i>
										<span>Personal Home</span>
									</a>
								</li>
								<li>
									<a href="@Url.Action("MyAds", "Account")">
										<i class="fas fa-credit-card"></i>
										<span>My Ads</span>
									</a>
								</li>
								<li>
									<a href="@Url.Action("Favourite", "Account")">
										<i class="fas fa-heart"></i>
										<span>Favourite Ads</span>
									</a>
								</li>
								<li>
									<a href="@Url.Action("SavedSearch", "Account")">
										<i class="fas fa-star"></i>
										<span>Saved Search </span>
									</a>
								</li>
								<li>
									<a href="@Url.Action("Archive", "Account")">
										<i class="fas fa-folder"></i>
										<span>Archived Ads</span>
									</a>
								</li>
								<li>
									<a href="@Url.Action("PendingApproval", "Account")">
										<i class="fas fa-hourglass"></i>
										<span>Pending Approval</span>
									</a>
								</li>
								<li>
									<a href="@Url.Action("CloseAccount", "Account")">
										<i class="fas fa-times"></i>
										<span>Close Account</span>
									</a>
								</li>
							</ul>
						</nav>
					</div>
					<div class="widget">
						<h4 class="widget-title">Advertisement</h4>
						<div class="inner-box">
							<div class="add-box">
								<img class="img-fluid" src="~/Classifieds/dist/img/img1.jpg" alt="">
							</div>
						</div>
					</div>
				</aside>
			</div>

			<div class="col-lg-8 col-md-12 col-xs-12 page-content">
				<div class="inner-box">
					<div class="welcome-msg">
						<div class="usearadmin">
							<img class="userimg" src="~/Classifieds/dist/img/user.jpg" alt="">
						</div>
						<div class="user-content">
							<h3 class="mb-1">Hello Jhon Doe </h3>
							<p class="small">You last logged in at: 01-03-2020 12:40 AM [UK time (GMT + 6:00hrs)]</p>
						</div>
					</div>
					<form>
						<div class="row">
							<div class="col-lg-12 ">
								<div class="form-group">
									<label>Your Name</label>
									<input type="text" name="name" class="form-control" placeholder="John Deo">
								</div>
							</div>
							<div class="col-lg-12">
								<div class="form-group">
									<label>Your Title</label>
									<input type="text" name="title" class="form-control" placeholder="Your Title">
								</div>
							</div>
							<div class="col-lg-12 ">
								<div class="form-group">
									<label>Phone</label>
									<input type="text" name="phone" class="form-control" placeholder="Phone">
								</div>
							</div>
							<div class="col-lg-12 ">
								<div class="form-group">
									<label>Email</label>
									<input type="email" name="email" class="form-control" placeholder="Email">
								</div>
							</div>
							<div class="col-lg-12">
								<div class="form-group">
									<label>About Me</label>
									<textarea class="form-control" rows="5" name="message">Message</textarea>
								</div>
							</div>
							<div class="col-lg-12">
								<div class="send-btn">
									<button type="submit" class="btn btn-primary btn-lg">Submit</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Content -->
